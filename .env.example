# RSP Education Agent V2 - Environment Configuration
# Copy this file to .env and update with your actual values

# =============================================================================
# API KEYS (REQUIRED)
# =============================================================================
# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# Get your Anthropic API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
# Generate a strong secret key for JWT tokens (use: openssl rand -hex 32)
SECRET_KEY=your_super_secret_jwt_key_here_change_in_production_use_openssl_rand_hex_32

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60
REFRESH_TOKEN_EXPIRE_DAYS=30

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
# Database connection (Docker will use the compose settings)
DATABASE_URL=postgresql://rsp_user:rsp_password@database:5432/rsp_education
REDIS_URL=redis://redis:6379/0

# Database Credentials (used in docker-compose.yml)
POSTGRES_DB=rsp_education
POSTGRES_USER=rsp_user
POSTGRES_PASSWORD=rsp_password

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# OpenAI Models
OPENAI_MODEL=gpt-3.5-turbo
OPENAI_EMBEDDING_MODEL=text-embedding-ada-002

# Anthropic Models
ANTHROPIC_MODEL=claude-3-sonnet-20240229

# =============================================================================
# APPLICATION SETTINGS
# =============================================================================
# Environment
DEBUG=false
LOG_LEVEL=INFO

# CORS Settings (comma-separated URLs)
CORS_ORIGINS=http://localhost:3000,http://localhost:80,http://frontend:80

# File Upload Settings
MAX_FILE_SIZE=10485760  # 10MB in bytes
UPLOAD_PATH=/app/uploads

# =============================================================================
# EXTERNAL SERVICES (OPTIONAL)
# =============================================================================
# Email Configuration (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@rspeducation.com
SMTP_FROM_NAME=RSP Education Agent

# SMS Configuration (optional)
TWILIO_ACCOUNT_SID=your_twilio_account_sid
TWILIO_AUTH_TOKEN=your_twilio_auth_token
TWILIO_PHONE_NUMBER=+1234567890

# =============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# =============================================================================
# Sentry for error tracking
SENTRY_DSN=your_sentry_dsn_here

# Google Analytics
GA_TRACKING_ID=your_google_analytics_id

# =============================================================================
# PRODUCTION SETTINGS
# =============================================================================
# SSL Configuration (for production)
SSL_CERT_PATH=/etc/ssl/certs/cert.pem
SSL_KEY_PATH=/etc/ssl/private/key.pem

# Domain Configuration
DOMAIN_NAME=yourdomain.com
FRONTEND_URL=https://yourdomain.com
BACKEND_URL=https://api.yourdomain.com