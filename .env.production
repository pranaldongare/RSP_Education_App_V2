# Production Environment Configuration
# RSP Education Agent V2 - Phase 6 Production Deployment
#
# IMPORTANT: Change all default passwords and secrets before deployment!
# Store sensitive values in a secure secret management system.

# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================
DATABASE_URL=postgresql://rsp_user:CHANGE_THIS_PASSWORD@postgres:5432/rsp_education
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20
DB_POOL_TIMEOUT=30
DB_POOL_RECYCLE=3600
DB_ECHO=false

# ============================================================================
# REDIS CONFIGURATION  
# ============================================================================
REDIS_URL=redis://:CHANGE_THIS_REDIS_PASSWORD@redis:6379/0
REDIS_PASSWORD=CHANGE_THIS_REDIS_PASSWORD

# ============================================================================
# APPLICATION SETTINGS
# ============================================================================
APP_ENV=production
APP_DEBUG=false
APP_HOST=0.0.0.0
APP_PORT=8000
APP_NAME="RSP Education Agent V2"
APP_VERSION="2.0.0"

# ============================================================================
# SECURITY SETTINGS
# ============================================================================
SECRET_KEY=GENERATE_SECURE_SECRET_KEY_MINIMUM_32_CHARACTERS
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7
ALGORITHM=HS256

# CORS settings
ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com
ALLOWED_CREDENTIALS=true
ALLOWED_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
ALLOWED_HEADERS=*

# ============================================================================
# AI API KEYS (Set these with your actual API keys)
# ============================================================================
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here  
GOOGLE_API_KEY=your_google_api_key_here
HUGGINGFACE_API_KEY=your_huggingface_api_key_here

# ============================================================================
# PERFORMANCE SETTINGS
# ============================================================================
WORKERS=4
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=100
TIMEOUT=120
KEEP_ALIVE=5

# ============================================================================
# LOGGING CONFIGURATION
# ============================================================================
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_FILE=/app/logs/app.log
ACCESS_LOG_FILE=/app/logs/access.log
ERROR_LOG_FILE=/app/logs/error.log

# ============================================================================
# MONITORING AND METRICS
# ============================================================================
ENABLE_PROMETHEUS_METRICS=true
METRICS_PORT=9000
HEALTH_CHECK_ENDPOINT=/health
METRICS_ENDPOINT=/metrics

# ============================================================================
# FILE STORAGE
# ============================================================================
UPLOAD_DIR=/app/uploads
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_FILE_TYPES=audio/wav,audio/mp3,audio/mpeg,image/jpeg,image/png,text/plain

# ============================================================================
# EMAIL CONFIGURATION (Optional)
# ============================================================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@domain.com
SMTP_PASSWORD=your_email_password
SMTP_USE_TLS=true
FROM_EMAIL=noreply@yourdomain.com

# ============================================================================
# RATE LIMITING
# ============================================================================
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_BURST=10

# ============================================================================
# DOCKER DATABASE PASSWORDS (Used by docker-compose)
# ============================================================================
POSTGRES_PASSWORD=CHANGE_THIS_POSTGRES_PASSWORD

# ============================================================================
# MONITORING PASSWORDS
# ============================================================================
GRAFANA_PASSWORD=CHANGE_THIS_GRAFANA_PASSWORD

# ============================================================================
# SSL/TLS CONFIGURATION
# ============================================================================
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem
SSL_KEY_PATH=/etc/nginx/ssl/key.pem
SSL_REDIRECT=true

# ============================================================================
# BACKUP CONFIGURATION
# ============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30
BACKUP_S3_BUCKET=your-backup-bucket
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key

# ============================================================================
# FEATURE FLAGS
# ============================================================================
ENABLE_VOICE_INTERACTION=true
ENABLE_MULTILINGUAL_SUPPORT=true
ENABLE_ANALYTICS=true
ENABLE_ASSESSMENT_PROCTORING=false
ENABLE_REAL_TIME_COLLABORATION=false

# ============================================================================
# CACHE CONFIGURATION
# ============================================================================
CACHE_TTL=3600  # 1 hour
CACHE_MAX_SIZE=1000
ENABLE_CACHE_COMPRESSION=true

# ============================================================================
# AI MODEL CONFIGURATION
# ============================================================================
DEFAULT_AI_MODEL=gpt-3.5-turbo
FALLBACK_AI_MODEL=gpt-3.5-turbo-instruct
MAX_TOKENS=2000
TEMPERATURE=0.7
ENABLE_AI_CONTENT_FILTERING=true

# ============================================================================
# DEVELOPMENT OVERRIDES (Remove in production)
# ============================================================================
# DEV_MODE=false
# MOCK_AI_RESPONSES=false
# ENABLE_DEBUG_ENDPOINTS=false